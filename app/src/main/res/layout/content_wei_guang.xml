<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="lzj.com.serialport.WeiGuangActivity"
    tools:showIn="@layout/activity_wei_guang">

    <Button
        android:id="@+id/openLight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:height="100dp"
        android:text="开灯"
        android:textSize="50sp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />
    <Button
        android:id="@+id/closeLight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:height="100dp"
        android:text="关灯"
        android:textSize="50sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/openLight"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />
    <Button
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/closeLight"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        android:height="100dp"
        android:text="返回"
        android:textSize="50sp"
        android:onClick="back"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/button" />
    <TextView
        android:id="@+id/saoResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="00000000000"
        android:layout_marginTop="8dp"
        android:textSize="50sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/button"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>
